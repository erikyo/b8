{
  "name": "l3u/b8",
  "description": "b8 is a statistical (Bayesian) spam filter implemented in PHP",
  "minimum-stability": "stable",
  "license": "proprietary",
  "authors": [
    {
      "name": "Tobias Leupold",
      "email": "l3u@nasauber.de"
    }
  ],
  "require-dev": {
    "php": "^7.2|^8.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.13.4",
    "friendsofphp/php-cs-fixer": "3"
  },
  "scripts": {
    "phpcs": "phpcs B8 --standard=PSR2",
    "phpcbf": "phpcbf B8 --standard=PSR2",
    "test": "phpunit"
  },
  "autoload": {
    "psr-4": {
      "B8\\": "B8/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "ext-pdo": "*",
    "ext-dba": "*",
    "ext-sqlite3": "*"
  }
}
