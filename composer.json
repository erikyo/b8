{
  "name": "l3u/b8",
  "description": "b8 is a statistical (Bayesian) spam filter implemented in PHP",
  "minimum-stability": "stable",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Tobias Leupold",
      "email": "l3u@nasauber.de"
    }
  ],
  "require": {
    "php": "^7.4|^8.1",
    "ext-pdo": "*",
    "ext-dba": "*",
    "ext-sqlite3": "*",
    "ext-mysqli": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0|^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpstan/phpstan": "^1.10",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs B8 --standard=phpcs.xml",
    "phpcbf": "phpcbf B8 --standard=phpcs.xml",
    "phpstan": "phpstan analyse",
    "fix-cs": "php-cs-fixer fix B8"
  },
  "autoload": {
    "psr-4": {
      "B8\\": "B8/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
